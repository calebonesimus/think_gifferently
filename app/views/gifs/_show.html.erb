<div class="text-center">
  <%= image_tag(gif.image_file, class: 'img-responsive gif-center') %>
  <br>
  <p>URL: <%= link_to image_url(gif.image_file) %></p>
  <p>
    Uploaded <%= time_ago_in_words(gif.created_at) %>
    by <%= gif.user.username %>
  </p>
  <p class="totalLikes">Total Likes: <%= gif.get_likes.size - gif.get_dislikes.size %></p>
  <ul class="likeButtons">
    <li><%= button_to 'Like', like_gif_path(id: gif.id), class: 'btn btn-primary btn-xs', remote: true %></li>
    <li><%= button_to 'Dislike', dislike_gif_path(id: gif.id), class: 'btn btn-danger btn-xs', remote: true %></li>
  </ul>
</div>
